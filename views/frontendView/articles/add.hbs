<main role="main">
{{>navbar}}

  <!-- Main jumbotron for a primary marketing message or call to action -->
  <div class="jumbotron">
    <div class="container">
      <h1 class="display-3">Manga Planet</h1>
    </div>
  </div>

  <div class="container">
    <!-- Example row of columns -->
    <div class="row">
      <div class="col-md-12 ">
        <form method="POST" action="/articles/create">
            <div class="form-group">
      <h2>Ajouter une annonce</h2>
      <p class="pp">Vendez vos mangas à travers toute la France d'un simple clic.</p>
                <label for="title">Titre de l'annonce :</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="Le titre de votre annonce">
            </div>

             <div class="form-group">
              <label for="price">Prix :</label>
              <input type="Number" class="form-control" class="card-value"  id="price" name="price" placeholder="Le prix de votre article">
              </div>


           <div class="form-group">
           <label for="categorie">Catégorie :</label>
            <select class='form-control'id="categorie" name="categorie" placeholder="Choisissez votre catégorie">
                <option value="mangas">Mangas</option>
                <option value="nourriture">Nourriture</option>
                <option value="jeux">Jeux-vidéo</option>
            </select>
            </div>
          <br>

            <div class="form-group">
                <label for="content">Votre annonce :</label>
                <textarea class="form-control" id="content" name="content" rows="3"></textarea>
                <script>
                    CKEDITOR.replace(
                        ('content'));
                    CKEDITOR.config.entities = false;
                    CKEDITOR.config.entities_latin = false;
                </script>
            </div>
            <button type="submit" class="btn btn-secondary">Publier</button>
        </form>
      </div>
    </div>

    <hr>

  </div> <!-- /container -->

</main>

